{
    <% if (projectProxy != '') { %>
    "proxy"      : "<%= projectProxy %>", <% } else { %>
    "proxy"      : "", <% } %>
    "projectType": "<%= projectUsage %>",
    "favicon": {
        "appName"       : "My App",
        "appDescription": "This is my Application",
        "developerName" : "<%= projectAuthor %>",
        "developerURL"  : "<%= projectUrl %>",
        "background"    : "#020307",
        "path"          : "favicons",
        "logging"       : false,
        "online"        : false,
        "icons"         : {
            "android"     : true,
            "appleIcon"   : true,
            "appleStartup": true,
            "coast"       : true,
            "favicons"    : true,
            "firefox"     : true,
            "opengraph"   : false,
            "twitter"     : false,
            "windows"     : true,
            "yandex"      : true
        }
    },
    "modernizr"  : {
        "options"  : [
            "setClasses",
            "addTest"
        ],
        "excludeTests": [
            "hidden"
        ],
        "tests"    : [
            "flexbox",
            "flexboxlegacy"
        ]
    },
    "minify"     : {
        "images": {
            "optimizationLevel": 3,
            "pngquant": {
                "quality": "75-88",
                "speed"  : 4
            },
            "progressive": true,
            "interlaced" : true,
            "svgoPlugins": [
                {"cleanupIDs"                : false},
                {"removeComments"            : true},
                {"removeViewBox"             : false},
                {"removeDesc"                : true},
                {"removeUselessDefs"         : false},
                {"removeDoctype"             : true},
                {"removeEmptyText"           : true},
                {"removeUnknownsAndDefaults" : true},
                {"removeEmptyContainers"     : true},
                {"collapseGroups"            : true},
                {"removeUselessStrokeAndFill": true},
                {"convertStyleToAttrs"       : true}
            ]
    }
    },
    "src"        : {
        "base"       : "src/",
        "views"      : "src/views/",
        "systemFiles": "src/systemFiles/",
        "css"        : "src/scss/",
        "fonts"      : "src/fonts/",
        "js"         : "src/js/",
        "favicons"   : "src/favicons/",
        "images"     : {
            "base"       : "src/images/",
            "svg"        : {
                "base"       : "src/images/svg/",
                "single"     : "single/",
                "sprite"     : "sprite/"
            },
            "bitmap"     : {
                "cssimages"  : "cssimages/",
                "htmlimages" : "htmlimages/"
            }
        }
    },
    "dist"       : {
    <% if (projectUsage == 'HTML Protoypes') { %>
        "base"              : "dist/",
        "views"             : "dist/",
        "css"               : "dist/assets/css/",
        "favicons"          : "dist/favicons/",
        "fonts"             : "dist/assets/fonts/",
        "js"                : "dist/assets/js/",
        "images"            : {
            "base"          : "dist/assets/images/",
            "svg"           : {
                "base"      : "dist/assets/images/svg/",
                "single"    : "single/",
                "sprite"    : "sprite/"
            },
            "bitmap"        : {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    <% } if (projectUsage == 'Wordpress') { %>
        "base"              : "dist/wp-content/themes/<%= projectName %>/",
        "views"             : "dist/wp-content/themes/<%= projectName %>/",
        "css"               : "dist/wp-content/themes/<%= projectName %>/assets/css/",
        "favicons"          : "dist/wp-content/themes/<%= projectName %>/favicons/",
        "fonts"             : "dist/wp-content/themes/<%= projectName %>/assets/fonts/",
        "js"                : "dist/wp-content/themes/<%= projectName %>/assets/js/",
        "images"            : {
            "base"          : "dist/wp-content/themes/<%= projectName %>/assets/images/",
            "svg"           : {
                "base"      : "dist/wp-content/themes/<%= projectName %>/assets/images/svg/",
                "single"    : "single/",
                "sprite"    : "sprite/"
            },
            "bitmap"        : {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    <% } if (projectUsage == 'Craft' && !craftHearty) { %>
        "base"              : "dist/public/",
        "views"             : "dist/craft/templates/",
        "systemFiles"       : "dist/public/",
        "css"               : "dist/public/assets/css/",
        "favicons"          : "dist/public/favicons/",
        "fonts"             : "dist/public/assets/fonts/",
        "js"                : "dist/public/assets/js/",
        "images"            : {
        "base"              : "dist/public/assets/images/",
            "svg"           : {
                "base"      : "dist/public/assets/images/svg/",
                "single"    : "single/",
                "sprite"    : "sprite/"
            },
            "bitmap"        : {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    <% } if (craftHearty && projectUsage == 'Craft') { %>
        "base"                  : "dist/public/",
        "views"                 : "dist/templates/",
        "systemFiles"           : "dist/public/",
        "css"                   : "dist/public/assets/css/",
        "favicons"              : "dist/public/favicons/",
        "fonts"                 : "dist/public/assets/fonts/",
        "js"                    : "dist/public/assets/js/",
        "images"                : {
            "base"              : "dist/public/assets/images/",
            "svg"               : {
                "base"          : "dist/public/assets/images/svg/",
                "single"        : "single/",
                "sprite"        : "sprite/"
            },
            "bitmap"            : {
                "cssimages"     : "cssimages/",
                "htmlimages"    : "htmlimages/"
            }
        }
    <% } if (projectUsage == 'Laravel') { %>
        "base"                  : "dist/public/",
        "views"                 : "dist/resources/views/",
        "systemFiles"           : "dist/public/",
        "css"                   : "dist/public/assets/css/",
        "favicons"              : "dist/public/favicons/",
        "fonts"                 : "dist/public/assets/fonts/",
        "js"                    : "dist/public/assets/js/",
        "images"                : {
            "base"              : "dist/public/assets/images/",
            "svg"               : {
                "base"          : "dist/public/assets/images/svg/",
                "single"        : "single/",
                "sprite"        : "sprite/"
            },
            "bitmap"            : {
                "cssimages"     : "cssimages/",
                "htmlimages"    : "htmlimages/"
            }
        }
     <% } %>

    }
}


