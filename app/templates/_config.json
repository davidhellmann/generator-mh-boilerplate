{
    <% if (projectProxy != '') { %>
    "proxy"      : "<%= projectProxy %>", <% } else { %>
    "proxy"      : "", <% } %>
    <% if (projectTwig) { %>
    "compiler"   : "twig", <% } else { %>
    "compiler"   : "nothing", <% } %>
    "projectType": "<%= projectUsage %>",
    "files"      : {
        "jsCombinePlugins"        : [
        ],
        "jsCombinePluginsFilename": "plugins.min.js",
        "jsCopyScripts"           : [
        ]
    },
    "favicon": {
        "appName"       : "My App",
        "appDescription": "This is my Application",
        "developerName" : "<%= projectAuthor %>",
        "developerURL"  : "<%= projectUrl %>",
        "background"    : "#020307",
        "path"          : "favicons",
        "logging"       : true,
        "online"        : false,
        "icons"         : {
            "android"     : true,
            "appleIcon"   : true,
            "appleStartup": true,
            "coast"       : true,
            "favicons"    : true,
            "firefox"     : true,
            "opengraph"   : false,
            "twitter"     : false,
            "windows"     : true,
            "yandex"      : true
        }
    },
    "modernizr"  : {
        "options"  : [
            "setClasses",
            "addTest"
        ],
        "excludeTests": [
            "hidden"
        ],
        "tests"    : [
            "flexbox",
            "flexboxlegacy"
        ]
    },
    "minify"     : {
        "images": {
            "optimizationLevel": 3,
            "pngquant": {
                "quality": "75-88",
                "speed"  : 4
            },
            "progressive": true,
            "interlaced" : true,
            "svgoPlugins": [
                {"cleanupIDs"                : false},
                {"removeComments"            : true},
                {"removeViewBox"             : false},
                {"removeDesc"                : true},
                {"removeUselessDefs"         : false},
                {"removeDoctype"             : true},
                {"removeEmptyText"           : true},
                {"removeUnknownsAndDefaults" : true},
                {"removeEmptyContainers"     : true},
                {"collapseGroups"            : true},
                {"removeUselessStrokeAndFill": true},
                {"convertStyleToAttrs"       : true}
            ]
    }
    },
    "src"        : {
        "src"      : "src/",
        "assets"   : "",
        "bower"    : "bower_components/",
        "views"    : "views/",
        "systemFiles": "systemFiles/",
        "css"      : "scss/",
        "fonts"    : "fonts/",
        "js"       : {
            "base"    : "js/",
            "mysource": "my-source/",
            "json"    : "json/"
        },
        "images"   : {
            "base"  : "images/",
            "svg"   : {
                "base"  : "svg/",
                "single": "single/",
                "sprite": "sprite/"
            },
            "bitmap": {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    },
    "dist"       : {
    <% if (projectUsage == 'HTML Protoypes') { %>
        "dist"     : "dist/",
        "views"    : "dist/",<% } if (projectUsage == 'Wordpress') { %>
        "dist"     : "dist/wp-content/themes/<%= projectName %>/",
        "views"    : "dist/wp-content/themes/<%= projectName %>/",
        "systemFiles": "dist/",<% } if (projectUsage == 'Craft' && !craftHearty) { %>
        "dist"     : "dist/public/",
        "views"    : "dist/craft/templates/",
        "systemFiles": "dist/public/",<% } if (craftHearty && projectUsage == 'Craft') { %>
        "dist"     : "dist/public/",
        "views"    : "dist/templates/",
        "systemFiles": "dist/public/",<% } if (projectUsage == 'laravel') { %>
        "dist"     : "dist/public/",
        "views"    : "dist/resources/views/",
         "systemFiles": "dist/public/",<% } %>
        "css"      : "css/",
        "fonts"    : "fonts/",
        "js"       : "js/",
        "images"   : {
            "base"  : "images/",
            "svg"   : {
                "base"  : "svg/",
                "single": "single/",
                "sprite": "sprite/"
            },
            "bitmap": {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    }
}


