{
  <% if (projectProxy != '') { %>
  "proxy": "<%= projectProxy %>", <% } %>
  "projectType": "<%= projectUsage %>",
  "src": {
    "src": "src/",
    "assets": "",
    "bower": "bower_components/",
    "views": "views/",
    "css": "scss/",
    "fonts": "fonts/",
    "js": {
      "base": "js/",
      "mysource": "my-source/",
      "json": "json/"
    },
    "images": {
      "base": "images/",
      "svg": {
        "base": "svg/",
        "single": "single/",
        "sprite": "sprite/"
      },
      "bitmap": {
        "cssimages": "cssimages/",
        "htmlimages": "htmlimages/"
      }
    }
  },
  "dist": {
    <% if (projectUsage == 'HTML Protoypes') { %>
    "dist": "dist/",
    "views": "dist/",<% } if (projectUsage == 'Wordpress') { %>
    "dist": "dist/wp-content/themes/<%= projectName %>/",
    "views": "dist/wp-content/themes/<%= projectName %>/",<% } if (projectUsage == 'Craft') { %>
    "dist": "dist/public/",
    "views": "dist/public/", <% } if (projectUsage == 'laravel') { %>
    "dist": "dist/public/",
    "views": "dist/resources/views/", <% } %>
    "css": "css/",
    "fonts": "fonts/",
    "js": "js/",
    "images": {
      "base": "images/",
      "svg": {
        "base": "svg/",
        "single": "single/",
        "sprite": "sprite/"
      },
      "bitmap": {
        "cssimages": "cssimages/",
        "htmlimages": "htmlimages/"
      }
    }
  },
  "modernizr": {
    "options": [
      "setClasses",
      "addTest"
    ],
    "excludeTests": [
      "hidden"
    ],
    "tests": [
      "flexbox",
      "flexboxlegacy"
    ]
  }

}
